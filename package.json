{
  "name": "librars.engine",
  "version": "1.0.0",
  "description": "Engine to parse input file and handle templates.",
  "main": "index.js",
  "scripts": {
    "test": "npm run build && npm run test:js",
    "test:js": "./node_modules/.bin/jest lib/",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js && npm run build:copygrammarfile",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "build:copygrammarfile": "cp src/parsing/*.pegjs lib/parsing"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/librars/engine.git"
  },
  "keywords": [
    "parser",
    "authoring",
    "ast"
  ],
  "author": "Andrea Tino",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/librars/engine/issues"
  },
  "homepage": "https://github.com/librars/engine#readme",
  "dependencies": {
    "pegjs": "^0.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-typescript": "^7.10.1",
    "@types/node": "^14.0.13",
    "@types/pegjs": "^0.10.2",
    "@types/jest": "^26.0.0",
    "typescript": "^3.9.5",
    "jest": "^26.0.1"
  }
}
